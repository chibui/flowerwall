<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    {{# if successMsg }}
      <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
        {{ successMsg }}
      </div>
    {{/ if}}
  </div>
</div>

<div class= "container-fluid landing-cover">
  <div class="row">
    <p class="text-center hero-title"><strong>WELCOME TO</strong></p>
  </div>
  <div class="row">
    <h1 class="hero-text text-center">The Flower Wall</h1>
  </div>
  <div class="">
    <h4 class="text-center hero-subtitle"><i>Sydney's Premier Hand Crafted Flower Walls</i></h4>
  </div>
</div>

<!-- {{> client-list }} -->

<div class="container-fluid">
  <div class="section-header">
    <h1 class="text-center">OUR CLIENTS</h1>
    {{# each client}}
      <div class="row">
        {{# each this}}
          <div class="col-sm-12 col-md-2">
            <div class="Aligner">
              <img class="Aligner-item img-responsive" src="{{ this.logo }}" alt="{{ this.name }}">
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}
  </div>
</div>


{{# each category}}
  <div class="row">
    {{# each this}}
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <img src="{{ this.imagePath }}" alt="...">
        <div class="caption clearfix">
          <h3>{{this.title}}</h3>
          <p class="description">{{this.description}}</p>
<!-- passing item id -->
          <p><a href="/products/{{this._id}}" class="btn btn-default pull-right pull-down" role="button">More</a></p>
        </div>
      </div>
    </div>
    {{/each}}
  </div><!-- row -->
{{/each}}
