{{#each products}}
  <div class="row">
    {{#each this}}
      <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
          <img src="{{ this.imagePath }}" alt="{{this.title}}" class="image-responsive">
          <div class="caption clearfix">
            <h3>{{this.title}}</h3>
            <p class="description">{{this.description}}</p>
            <p><a href="#" class="btn btn-default pull-right" role="button">More</a></p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
{{/each}}
