<div class="row">
  <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
    {{# if successMsg }}
      <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
        {{ successMsg }}
      </div>
    {{/ if}}  
  </div>
</div>

{{# each products}}
  <div class="row">
  {{# each this}}
    <div class="col-sm-4 col-md-4">
      <div class="thumbnail">
        <img src="{{ this.imagePath }}" alt="...">
        <div class="caption clearfix">
          <h3>{{this.title}}</h3>
          <p class="description">{{this.description}}</p>
          <div class="price pull-left">${{this.price}}</div>
<!-- passing item id -->
          <p><a href="/addToCart/{{this._id}}" class="btn btn-default pull-right pull-down" role="button">Add</a></p>
        </div>
      </div>
    </div>
  {{/each}}
  </div>
{{/each}}
